{
  "manifest_version": 3,
  "name": "补天漏洞提交助手",
  "version": "1.0.0",
  "description": "补天平台漏洞提交助手，支持自动填充、URL识别、厂商查询等功能",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.butian.net/*",
    "*://*.aizhan.com/*",
    "*://*.chinaz.com/*",
    "*://*.beianbeian.com/*",
    "*://restapi.amap.com/*",
    "*://www.aizhan.com/*",
    "*://seo.chinaz.com/*",
    "*://icp.chinaz.com/*",
    "*://www.beianbeian.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.butian.net/Loo/submit*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "补天漏洞提交助手"
  }
}
